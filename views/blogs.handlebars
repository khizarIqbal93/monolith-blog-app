<div style="padding: 10px;">
	<style>
		.card:hover { transform: translateY(-20px); transition: 0.4s ease-out; }
		.card:hover h5 { text-decoration: underline; color:rgb(220, 110, 61)} .card
		{ transition: 0.4s ease-out; }

	</style>
	<h1 style="text-align: center;">See what all the pandas are up to...</h1>
	<ul
		class="card_list"
		style="list-style: none;  margin: auto; width: 60%; padding: 10px;"
	>
		{{#each blogs}}
			<li
				id="{{this.id}}"
				class="card"
				style="width: 18rem; margin:10px; padding: 10px; display:inline-flex; "
			>
				<div class="card-body" style="height: 250px;">
					<h5 class="card-title">{{this.title}}</h5>
					<p class="card-text">{{this.snippet}} </p>
					<a href="/blogs/{{this.id}}" class="card-link">Read more</a>
					<p class="card-text">🐼 <span>:</span> {{this.author}} </p>
				</div>
			</li>
		{{/each}}
	</ul>
</div>